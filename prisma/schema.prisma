generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ScanStatus {
  PROGRESS
  COMPLETED
  ERROR
}

model IstatScan {
  id            Int        @id @default(autoincrement())
  status        ScanStatus @default(PROGRESS)
  publishDate   String
  updatedItems  Int        @default(0)
  statusMessage String?

  startAt DateTime @default(now())
  endAt   DateTime?

  @@map("istat_scans")
}

model Area {
  id        Int      @id @default(autoincrement())
  code      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  regions Region[]

  @@unique([code, name])
  @@map("areas")
}

model Region {
  id        Int      @id @default(autoincrement())
  areaId    Int
  code      String   @unique
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  area      Area       @relation(fields: [areaId], references: [id])
  provinces Province[]

  @@unique([code, name])
  @@map("regions")
}

model Province {
  id           Int      @id @default(autoincrement())
  regionId     Int
  code         String
  name         String
  abbreviation String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  region Region @relation(fields: [regionId], references: [id])
  cities City[]

  @@unique([code, name])
  @@map("provinces")
}

model City {
  id                Int     @id @default(autoincrement())
  provinceId        Int
  code              String
  name              String
  italianName       String
  otherLanguageName String?
  cadastralCode     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  province Province @relation(fields: [provinceId], references: [id])

  @@map("cities")
}
